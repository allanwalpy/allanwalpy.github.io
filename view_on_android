#!/bin/bash

echo -e "\n\n -- copying files on android -- \n\n" && \
adb push ./index.html /data/local/tmp/webview/index.html && \
adb push ./style.css /data/local/tmp/webview/style.css && \
adb push ./user.png /data/local/tmp/webview/user.png && \
adb push ./icon.ico /data/local/tmp/webview/icon.ico && \
echo -e "\n\n -- launching page view -- \n\n" && \
adb shell am start -n com.android.chrome/com.google.android.apps.chrome.Main -d "file:///data/local/tmp/webview/index.html" -t "text/html"
